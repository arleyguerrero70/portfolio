// Rellenar con arlo-logo si no es m√∫ltiplo de 4
const maxColumns = 4;
const remainder = imagesMansory.length % maxColumns;
if (remainder !== 0) {
  const toAdd = maxColumns - remainder;
  for (let i = 0; i < toAdd; i++) {
    imagesMansory.push({ image: "/assets/arlo-logo.png", url: "" });
  }
}
---

<Home>
  <Header title="Header home" />
  <Hero title="Hero Home" />
  <div>
    <h2 class="text-3xl font-semibold text-primary-arlo text-center mt-15 mb-6 px-2 sm:text-4xl">
      Mis implementaciones
    </h2>
  </div>
  <Cards title="Cards Home" />
  <div>
    <h2 class="text-3xl font-semibold text-primary-arlo text-center mt-15 mb-6 px-2 sm:text-4xl">
      Mis participaciones
    </h2>
  </div>
  <MasonryGrid images={imagesMansory} />
  <InformationPage title="Information Home" />
  <Footer title="Footer home" />
</Home>
