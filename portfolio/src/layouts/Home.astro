---
import SpeedInsights from '@vercel/speed-insights/astro';
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content="Frontend Developer en VTEX & Shopify">
    <meta name="description" content="Desarrollador frontend especializado en VTEX y Shopify. Diseño y optimizo tiendas online con componentes de alto rendimiento y conversión.">
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
  </head>
  <body class="container m-auto">
    <SpeedInsights />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0 auto;
    width: 100%;
    height: 100%;
    background-color: #000;
  }
</style>
